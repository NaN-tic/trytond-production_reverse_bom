<tryton>
    <data>

        <record model="ir.ui.view" id="bom_view_list">
            <field name="model">production.bom</field>
            <field name="type">tree</field>
            <field name="name">bom_list</field>
        </record>

        <record model="ir.action.act_window" id="act_reverse_bom_list">
            <field name="name">Reverse BOMs</field>
            <field name="res_model">production.bom</field>
        </record>
        <record model="ir.action.act_window.view" id="act_bom_list_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="bom_view_list"/>
            <field name="act_window" ref="act_reverse_bom_list"/>
        </record>
        <record model="ir.action.act_window.view" id="act_bom_list_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="production.bom_view_form"/>
            <field name="act_window" ref="act_reverse_bom_list"/>
        </record>
        <record model="ir.action.wizard" id="wizard_bom_tree_from_reverse">
            <field name="name">BOM Tree</field>
            <field name="wiz_name">production.bom.tree.from_reverse</field>
            <field name="window" eval="True"/>
        </record>
        <record model="ir.action.keyword" id="act_open_bom_keyword">
            <field name="keyword">tree_open</field>
            <field name="model">production.bom,-1</field>
            <field name="action" ref="wizard_bom_tree_from_reverse"/>
        </record>
        <record model="ir.action.wizard" id="wizard_bom_reverse_tree">
            <field name="name">Reverse BOM Tree</field>
            <field name="wiz_name">production.bom.reverse_tree.open</field>
        </record>
        <record model="ir.action.keyword"
            id="act_bom_reverse_tree_open_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">product.product,-1</field>
            <field name="action" ref="wizard_bom_reverse_tree"/>
        </record>

    </data>
</tryton>
