<tryton>
    <data>

        <record model="ir.ui.view" id="bom_tree_open_tree_view_form">
            <field name="model">production.bom.tree.open.tree</field>
            <field name="type">form</field>
            <field name="name">bom_tree_open_reverse_tree_form</field>
        </record>

        <record model="ir.action.wizard" id="wizard_bom_reverse_tree_open">
            <field name="name">Reverse BOM Tree</field>
            <field name="wiz_name">production.bom.reverse_tree.open</field>
            <field name="model">product.product</field>
            <field name="window" eval="True"/>
        </record>
        <record model="ir.action.keyword"
            id="act_bom_reverse_tree_open_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">product.product,-1</field>
            <field name="action" ref="wizard_bom_reverse_tree_open"/>
        </record>

    </data>
</tryton>
